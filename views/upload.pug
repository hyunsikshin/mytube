extends layouts/main

block content
  .form-container
    form(action=`/videos${routes.upload}`, method="post")
      input(type="file", name="file")
      input(type="text", name="title", placeholder="Title", required=true)
      input(type="text", name="description", placeholder="Description", required=true)
      input(type="submit", value="Upload Video", required=true)